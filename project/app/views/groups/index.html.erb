<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table>
  <thead>
    <tr>
      <th>Groupid</th>
      <th>Name</th>
      <th>Interest</th>
      <th>Language Preference</th>
      <th>Meeting Time</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= group.name %></td>
        <td><%= group.interest %></td>
        <td><%= group.language_preference %></td>
        <td><%= group.availability %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_user_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

